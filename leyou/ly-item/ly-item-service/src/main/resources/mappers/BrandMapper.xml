<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyou.dao.BrandMapper">
    <!--品牌查询-->
    <select id="queryBrandsbyPage" resultType="com.leyou.pojo.Brand">
        select *
        from tb_brand

        <where>
            <if test="key != null and key != ''">
                (name like '%${key}%'
                        or
                 letter = #{key})
            </if>
        </where>
        <!--排序-->
        <if test="sortBy != null and sortBy != ''">
            <!--根据什么字段-->
            order by  #{sortBy}

            <!--是否降序-->
            <if test="desc">
                desc
            </if>
        </if>
    </select>


    <!--添加-->
    <insert id="saveCategoryAndBrand">
        insert into tb_category_brand(category_id, brand_id) value (#{cid}, #{bid})
    </insert>

    <select id="queryBrandsbyPagelimit" resultType="com.leyou.pojo.Brand">
        select *
        from tb_brand

        <where>
            <if test="key != null and key != ''">
                (name like '%${key}%'
                        or
                 letter = #{key})
            </if>
        </where>
        <!--排序-->
        <if test="sortBy != null and sortBy != ''">
            <!--根据什么字段-->
            order by  #{sortBy}

            <!--是否降序-->
            <if test="desc">
                desc
            </if>
        </if>
        limit #{page},#{rows}
    </select>

    <!--总条数-->
    <select id="findBrandCount" resultType="java.lang.Long">
        select count(*)
        from tb_brand

        <where>
            <if test="key != null and key != ''">
                (name like '%${key}%'
                        or
                 letter = #{key})
            </if>
        </where>
        <!--排序-->
        <if test="sortBy != null and sortBy != ''">
            <!--根据什么字段-->
            order by  #{sortBy}

            <!--是否降序-->
            <if test="desc">
                desc
            </if>
        </if>
    </select>


    <delete id="deleteCategoryAndBrand" parameterType="long">
        delete
        from tb_category_brand
        where brand_id = #{id}
    </delete>


    <!--根据品牌id查分类-->
    <select id="queryCategorysByBrandId" parameterType="long" resultType="com.leyou.pojo.Category">
        select y.*
        from tb_category_brand x,
             tb_category y
        where x.category_id = y.id
          and x.brand_id=#{id}
    </select>
</mapper>
